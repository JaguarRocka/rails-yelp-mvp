<h1>Restaurant</h1>
<p><%= @restaurant.name %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category%></p>

<h4>Ratings:</h4>

<% @reviews.each do |review| %>
<p><%= review.rating %></p>
<p><%= review.content %></p>
<% end %>


<%= link_to "add review", new_restaurant_review_path(@restaurant)  %>
<%= link_to "back to index", restaurants_path  %>
